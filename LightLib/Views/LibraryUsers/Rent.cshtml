@model LightLib.ViewModels.UserCheckoutsAssets
@{
    ViewBag.Title = "Rent Assets";
}

<h2>@ViewBag.Title</h2>

<div class="jumbotron">
    <h5>Assets available</h5>
    @using (@Html.BeginForm("Rent", "LibraryUsers", FormMethod.Get))
    {
        <div class="col-md-3">
            @Html.TextBox("Search")
        </div>
        <input type="submit" value="Search" />
    }
</div>

<table class="table table-hover">
    <tr>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Released Year
        </th>
        <th>
            Image
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Assets)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReleasedYear)
            </td>
            <td>
                <img src="@item.ImageUrl" class="imgAssetIndex" />
                @*@Html.DisplayFor(modelItem => item.ImageUrl)*@
            </td>
            <td>
                @Html.ActionLink("Rent", "RentProcess", new { userId = Model.User.Id, assetId = item.Id }, new { @class="btn btn-success"})
            </td>
        </tr>
    }

</table>